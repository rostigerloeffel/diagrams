{
  "name": "root",
  "private": true,
  "scripts": {
    "type-check": "lerna exec -- tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "lerna exec -- tsc --emitDeclarationOnly",
    "build:js": "lerna exec -- babel --config-file ../../.babelrc src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "link": "lerna exec -- npm link"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "lerna": "^3.22.1",
    "typescript": "^4.0.2"
  }
}
